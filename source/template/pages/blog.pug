                            img.l-block-article__pic
                aside.l-page-nav.l-page-nav_aside
                    ul.l-page-nav__list
                        -
                            var navItems = [["Самое важное в SASS", "sass"],
                                            ["Приёмы в вёрсткебез которых не обходится ни один сайт", "verstka"],
                                            ["Самый необходимый набор Gulp плагинов", "#"],
                                            ["Почему я выбрал Jade", "#"]]
                        each navItem in navItems
                            li.l-page-nav__item
                                a(href="#" + `${navItem[1]}`).l-page-nav__link.l-page-nav__link= navItem[0]

        +navigationSite('blog')

        .push
    include partails/_footer



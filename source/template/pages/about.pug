extends ../_template

block variables
    - var title = "Обо мне"

block content
    .wrapper
        section.l-section.l-hero
            +header(userName, pageSignature)

        section.l-section.l-about
            .l-about__col.l-about__col_left
                svg(viewBox="0 0 1000 110" preserveAspectRatio="none").l-about__triangle
                    polygon(points="0,0 0,110 1000,110")
                .c-section-title.c-section-title_col.l-about-col__item(style="background-image: url(/assets/img/decor/stars2.png)") Обо мне
                .c-about.l-about-col__item
                    .c-about__pic-cotainer
                        img.c-about__pic(src="/assets/img/content/user.jpg").
                    .c-block-title Кто я
                    .c-block-text
                        p Я веб разработчик из Новосибирска. Мне 28 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                        p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите,как тут всё классно и красиво!
            .l-about__col.l-about__col_right
                svg(viewBox="0 0 1000 110" preserveAspectRatio="none").l-about__triangle
                    polygon(points="0,110 1000,110 1000,0")
                .l-skills
                    .c-block-title Чем я могу быть
                     br
                     |вам полезен
                    .l-skills__text
                        p Больше всего меня привлекет Frontend разработка, но я также знаком и могу решать не сложные задачи на Backend. Но давайте по порядку.
                    ul.l-skills-group
                        li.l-skills-group__item
                          .c-skills-group__title Frontend
                           ul.l-skils-list
                               li.l-skills-list_item
                                   -
                                       var list = [["HTML5", "93"],
                                                   ["CSS3", "9"],
                                                   ["JavaScript & jQuery", "9"]]
                                   each item in list
                                       .c-skill
                                           svg.c-skill__circle
                                               circle(r="45" cx="50%" cy="50%").c-skills__circle-under
                                               circle(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class="c-skills__circle-above_" + `${item[1]}`).c-skills__circle-above
                                           .c-skill__title= item[0]
                        li.l-skills-group__item
                            .c-skills-group__title Backend
                                ul.l-skils-list
                                    li.l-skills-list_item
                                        -
                                            var list = [["PHP", "4"],
                                                        ["mySQL", "55"],
                                                        ["Node.js & npm", "35"],
                                                        ["Mongo.db", "6"]]
                                        each item in list
                                            .c-skill
                                                svg.c-skill__circle
                                                    circle(r="45" cx="50%" cy="50%").c-skills__circle-under
                                                    circle(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class="c-skills__circle-above_" + `${item[1]}`).c-skills__circle-above
                                                .c-skill__title= item[0]
                        li.l-skills-group__item
                            .c-skills-group__title WorkFlow
                                ul.l-skils-list
                                    li.l-skills-list_item
                                        -
                                            var list = [["Git", "9"],
                                                        ["Gulp", "75"],
                                                        ["Bower", "6"]]
                                        each item in list
                                            .c-skill
                                                svg.c-skill__circle
                                                    circle(r="45" cx="50%" cy="50%").c-skills__circle-under
                                                    circle(r="45" cx="50%" cy="50%" transform="rotate(-90 55 55)" class="c-skills__circle-above_" + `${item[1]}`).c-skills__circle-above
                                                .c-skill__title= item[0]

        section.l-section.l-map.l-section_bg
            .c-block-bg(style="background-image: url('/assets/img/content/map.jpg');")
            .c-contacts
                .c-block-title Контакты
                ul.c-contacts__container
                    -
                        var contacts = [["envelope", userContacts.email], ["skype", userContacts.skype], ["phone", userContacts.phone], ["map", userContacts.address]]
                    each contact in contacts
                        li.c-contacts__item
                            a(href="#").c-contacts__link.c-contacts_col
                                svg.c-contacts__icon
                                    use(xlink:href="/assets/img/sprite.svg#" + `${contact[0]}` + "_n")
                            .c-contacts__title.c-contacts_col= contact[1]

        +navigationSite('about')

        a(href="#").c-hamburger.c-hamburger_nav.c-hamburger_active
            svg.c-hamburger__icon(x="0px" y="0px" viewBox="0 0 40 35")
                path.c-hamburger__el.c-hamburger__el-top(class="path1" d="M40,2.5C40,3.881,38.881,5,37.5,5h-35C1.119,5,0,3.881,0,2.5l0,0C0,1.119,1.119,0,2.5,0h35 	C38.881,0,40,1.119,40,2.5L40,2.5z")
                path.c-hamburger__el.c-hamburger__el-middle(class="path2" d="M40,17.5c0,1.381-1.119,2.5-2.5,2.5h-35C1.119,20,0,18.881,0,17.5l0,0C0,16.119,1.119,15,2.5,15h35 	C38.881,15,40,16.119,40,17.5L40,17.5z")
                path.c-hamburger__el.c-hamburger__el-bottom(class='path3' d="M40,32.5c0,1.381-1.119,2.5-2.5,2.5h-35C1.119,35,0,33.881,0,32.5l0,0C0,31.119,1.119,30,2.5,30h35 	C38.881,30,40,31.119,40,32.5L40,32.5z")
        .push
    include partails/_footer



mixin user(title, desc)
    .c-user(style="background-image: url(/assets/img/decor/strars1.png)")
        .c-user__pic-container
            img.c-user__pic(src="/assets/img/content/user.jpg")
        .c-user__name= title
        .c-user__desc= desc


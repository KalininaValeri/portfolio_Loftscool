mixin socialIcons(className)
    ul.socials(class=`${className}`)
        -
            var icons = mySocialsIcons
        each icon in icons
            li.social__item
                a(href=`${icon[1]}` target="_blank").social__link
                    svg.social__icon
                        use(xlink:href="/assets/img/sprite.svg#" + `${icon[0]}`)

mixin nav(className, list, active)
    ul(class="c-nav_" + `${className}`)
        -
            var navList = list

        each navItem, ndx in navList
            li(class="c-nav_" + `${className}` + "__item")
                if ndx === active
                    a(href="/" + `${navItem[1]}` +".html" class="c-nav_" + `${className}` + "__link c-nav_" + `${className}` + "__link_active")= navItem[0]
                    //a.c-nav_site__link(href="/" + `${navItem[1]}` +".html" class=((ndx === activeEl) ? 'c-nav_site__link_active' : ''))= navItem[0]
                else
                    a(href="/" + `${navItem[1]}` +".html" class="c-nav_" + `${className}` + "__link")= navItem[0]



mixin user(title, desc)
    .c-user
        .c-user__pic-container
            img.c-user__pic(src="/assets/img/content/user.jpg")
        .c-user__name= title
        .c-user__desc= desc

mixin header(userTitle, userDesc)
    .l-hero__bg
        img(src="/assets/img/bg/portfolio.jpg")
    .l-hero__container
        svg.c-hero-title-pic
            use(xlink:href="/assets/img/sprite.svg#stars1")

    +user(userTitle, userDesc)

    ul.socials
        li.social__item
            a(href="#").social__link
                svg.social__icon
                    use(xlink:href="/assets/img/sprite.svg#vk")
        li.social__item
            a(href="#").social__link
                svg.social__icon
                    use(xlink:href="/assets/img/sprite.svg#github")
        li.social__item
            a(href="#").social__link
                svg.social__icon
                    use(xlink:href="/assets/img/sprite.svg#in")

    ul.socials.socials_nav-page
        li.social__item
            a(href="#").social__link
                svg.social__icon
                    use(xlink:href="/assets/img/sprite.svg#hamburger")



extends ../_template

block variables
  - var title = 'home'

block content
  .wrapper.l-section_bg
    .c-block-bg(style="background-image: url('/assets/img/bg/portfolio.jpg');")
    header.l-header-index
      a.c-block-link_to-avtor(href='#') Авторизоваться
    .c-block-info
      include partails/_header_insides
      +user("Валерия Калинина", "Личный сайт веб разработчика")

      +socialIcons("socials_index")

      ul.c-nav_block-info
        -
            var navItems = [siteNav.work, siteNav.about, siteNav.blog]
        each navItem in navItems
          li.c-nav_block-info__item
            a.c-nav_block-info__link(href="/" + `${navItem[1]}` +".html")= navItem[0]


    .push-small
  footer.l-footer-small © #{userName} | создано с любовью в LoftSchool | 2017







